#!/usr/bin/env bash
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "${SCRIPT_DIR}/../purenas.conf"

if [ -z "$1" ]; then
    echo "Usage: $0 <IP_ADDRESS>" >&2
    exit 1
fi

IP="$1"

nft list set ${NFT_FAMILY} ${NFT_TABLE} banned_hosts >/dev/null 2>&1 || {
    nft add set ${NFT_FAMILY} ${NFT_TABLE} banned_hosts '{ type ipv4_addr; }'
}

nft add element ${NFT_FAMILY} ${NFT_TABLE} banned_hosts { ${IP} } 2>/dev/null || {
    echo "Error: Failed to add ${IP} to banned_hosts set" >&2
    exit 1
}

conntrack -D -s ${IP} >/dev/null 2>&1 || true
conntrack -D -d ${IP} >/dev/null 2>&1 || true

echo "== Banned ${IP} =="

