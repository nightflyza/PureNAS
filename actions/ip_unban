#!/usr/bin/env bash
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "${SCRIPT_DIR}/../purenas.conf"

if [ -z "$1" ]; then
    echo "Usage: $0 <IP_ADDRESS>" >&2
    exit 1
fi

IP="$1"

nft delete element ${NFT_FAMILY} ${NFT_TABLE} banned_hosts { ${IP} } 2>/dev/null || {
    echo "Error: Failed to remove ${IP} from banned_hosts set" >&2
    exit 1
}

echo "== Unbanned ${IP} =="

