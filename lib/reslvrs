#!/usr/bin/env bash
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "${SCRIPT_DIR}/../purenas.conf"

if [ -n "${SYSTEM_DNS_RESOLVERS:-}" ]; then
    echo "== Configuring system DNS resolvers =="
    echo "# Auto-generated by PureNAS" > /etc/resolv.conf
    for dns_server in ${SYSTEM_DNS_RESOLVERS}; do
        echo "nameserver ${dns_server}" >> /etc/resolv.conf
    done
    echo "== Configured DNS resolvers: ${SYSTEM_DNS_RESOLVERS} =="
fi

